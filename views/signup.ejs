<%- include('partials/header') %>

<div class="signup-container">
  <div class="signup-card">
    <h2 class="signup-title">Create an Account</h2>

    <% if (error_msg) { %>
      <p class="error-msg"><%= error_msg %></p>
    <% } %>

    <form action="/auth/signup" method="POST" class="signup-form">
      <label for="name">Enter name:</label>
      <input id="name" name="name" placeholder="Name" required>

      <label for="email">Enter email:</label>
      <input type="email" id="email" name="email" placeholder="Email" required>

      <label for="password">Enter password:</label>
      <input type="password" id="password" name="password" placeholder="Password" required>

      <button type="submit" class="btn-primary">Sign Up</button>
    </form>

    <p class="or-divider">or</p>

    <a href="/auth/google" class="google-auth-btn">Sign up with Google</a>

    <!-- âœ… Already a user? Log in button -->
    <a href="/auth/login" class="login-redirect-btn">Already a user? Log in</a>
  </div>
</div>

<%- include('partials/footer') %>

<style>
  .signup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    min-height: 80vh;
    background-color: #f5f7fa;
  }

  .signup-card {
    background-color: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 400px;
  }

  .signup-title {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #333;
  }

  .signup-form {
    display: flex;
    flex-direction: column;
  }

  .signup-form label {
    margin-bottom: 0.3rem;
    font-weight: 500;
    color: #444;
  }

  .signup-form input {
    padding: 0.6rem 0.8rem;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 1rem;
  }

  .btn-primary {
    padding: 0.7rem;
    background-color: #4a90e2;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .btn-primary:hover {
    background-color: #357ac9;
  }

  .or-divider {
    text-align: center;
    margin: 1rem 0;
    color: #666;
  }

  .google-auth-btn {
    display: block;
    text-align: center;
    padding: 0.7rem;
    background-color: #db4437;
    color: white;
    font-weight: bold;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.3s;
    margin-bottom: 1rem;
  }

  .google-auth-btn:hover {
    background-color: #c33d2f;
  }

  .login-redirect-btn {
    display: block;
    text-align: center;
    padding: 0.6rem;
    background-color: transparent;
    color: #4a90e2;
    font-weight: 500;
    text-decoration: underline;
    cursor: pointer;
    transition: color 0.3s;
  }

  .login-redirect-btn:hover {
    color: #357ac9;
  }

  .error-msg {
    color: red;
    text-align: center;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  @media screen and (max-width: 480px) {
    .signup-card {
      padding: 1.5rem;
    }

    .signup-title {
      font-size: 1.4rem;
    }
  }
</style>
