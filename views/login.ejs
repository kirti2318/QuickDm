<%- include('partials/header') %>

<div class="auth-container">
  <div class="auth-card">
    <h2>Hi, Welcome back to <span class="brand-name">QuickDM</span> ðŸ‘‹</h2>
    <p class="subheading">Please login to continue</p>

    <% if (message) { %>
      <p class="success-msg"><%= message %></p>
    <% } %>

    <% if (error_msg || error) { %>
      <p class="error-msg"><%= error_msg || error %></p>
    <% } %>

    <% if (success_msg) { %>
      <p class="success-msg"><%= success_msg %></p>
    <% } %>

    <form action="/auth/login" method="POST" class="auth-form">
      <input type="email" name="email" placeholder="Email" required>
      <input type="password" name="password" placeholder="Password" required>
      <button type="submit">Login</button>
    </form>

    <p class="or-text">or</p>
    <a href="/auth/google" class="google-btn">Login with Google</a>
  </div>
</div>

<style>
  .auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    min-height: 80vh;
    background-color: #f5f5f5;
  }

  .auth-card {
    background-color: #fff;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    text-align: center;
  }

  .auth-card h2 {
    margin-bottom: 0.5rem;
    font-size: 1.6rem;
  }

  .brand-name {
    color: #4f46e5;
    font-weight: 600;
  }

  .subheading {
    color: #555;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .auth-form input {
    width: 100%;
    padding: 0.8rem;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
  }

  .auth-form button {
    width: 100%;
    padding: 0.8rem;
    background-color: #4f46e5;
    color: #fff;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .auth-form button:hover {
    background-color: #4338ca;
  }

  .or-text {
    margin: 1rem 0;
    font-size: 0.9rem;
    color: #777;
  }

  .google-btn {
    display: inline-block;
    text-decoration: none;
    color: #444;
    background-color: #fff;
    border: 1px solid #ccc;
    padding: 0.6rem 1rem;
    border-radius: 0.5rem;
    transition: background-color 0.3s ease;
  }

  .google-btn:hover {
    background-color: #f1f1f1;
  }

  .success-msg {
    color: green;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .error-msg {
    color: red;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 500px) {
    .auth-card {
      padding: 1.5rem;
      margin: 0 1rem;
    }

    .auth-form input,
    .auth-form button,
    .google-btn {
      font-size: 0.9rem;
    }
  }
</style>

<%- include('partials/footer') %>
